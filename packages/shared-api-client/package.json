{
  "name": "@splits-network/shared-api-client",
  "version": "1.0.0",
  "description": "Unified API client for Splits Network frontend applications",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@splits-network/shared-types": "workspace:*"
  },
  "devDependencies": {
    "typescript": "^5.6.3",
    "tsup": "^8.0.0"
  },
  "publishConfig": {
    "access": "restricted"
  }
}