'use client';

import { useState, useEffect, useMemo } from 'react';
import { useAuth } from '@clerk/nextjs';
import { createAuthenticatedClient } from '@/lib/api-client';
import { useDebouncedCallback } from '@/hooks/use-debounce';
import ProfileCompletenessIndicator from '@/components/profile-completeness-indicator';
import { calculateProfileCompleteness, TIER_CONFIG } from '@/lib/utils/profile-completeness';

interface CandidateProfile {
    id: string;
    full_name: string;
    email: string;
    phone?: string;
    location?: string;
    current_title?: string;
    current_company?: string;
    bio?: string;
    linkedin_url?: string;
    github_url?: string;
    portfolio_url?: string;
    skills?: string;

    // Marketplace fields
    marketplace_visibility?: 'public' | 'private' | 'hidden';
    marketplace_profile?: {
        bio_rich?: string;
    };

    // Privacy controls
    show_email?: boolean;
    show_phone?: boolean;
    show_location?: boolean;
    show_current_company?: boolean;
    show_salary_expectations?: boolean;

    // Career preferences
    desired_salary_min?: number;
    desired_salary_max?: number;
    desired_job_type?: string;
    open_to_remote?: boolean;
    open_to_relocation?: boolean;
    availability?: string;
}

const JOB_TYPE_OPTIONS = [
    'Full-time',
    'Contract',
    'Part-time',
    'Temporary',
    'Internship',
];

const AVAILABILITY_OPTIONS = [
    'Immediate',
    '2 weeks notice',
    '1 month',
    '2 months',
    '3+ months',
    'Not actively looking',
];

export default function ProfilePage() {
    const { getToken } = useAuth();
    const [activeTab, setActiveTab] = useState('basic');
    const [loading, setLoading] = useState(true);
    const [saving, setSaving] = useState(false);
    const [profile, setProfile] = useState<CandidateProfile | null>(null);
    const [error, setError] = useState<string | null>(null);

    // Calculate profile completeness
    const completeness = useMemo(() => {
        if (!profile) return null;
        return calculateProfileCompleteness(profile);
    }, [profile]);

    // Load profile
    useEffect(() => {
        async function loadProfile() {
            try {
                setLoading(true);
                const token = await getToken();

                if (!token) {
                    setError('Authentication token not found. Please sign in again.');
                    setLoading(false);
                    return;
                }

                const client = await createAuthenticatedClient(token);
                const response = await client.get('/candidates?limit=1');

                if (response.data && response.data.length > 0) {
                    setProfile(response.data[0]);
                } else {
                    setError('Profile not found. Please contact support.');
                }
            } catch (err: any) {
                console.error('Failed to load profile:', err);
                setError(err.message || 'Failed to load profile');
            } finally {
                setLoading(false);
            }
        }

        loadProfile();
    }, [getToken]);

    // Debounced save function
    const saveProfile = useDebouncedCallback(async (updates: Partial<CandidateProfile>) => {
        if (!profile) return;

        try {
            setSaving(true);
            const token = await getToken();

            if (!token) {
                setError('Authentication token not found. Please sign in again.');
                setLoading(false);
                return;
            }

            const client = await createAuthenticatedClient(token);
            await client.patch(`/candidates/${profile.id}`, updates);
            console.log('Profile saved successfully');
        } catch (err: any) {
            console.error('Failed to save profile:', err);
            setError(err.message || 'Failed to save profile');
        } finally {
            setSaving(false);
        }
    }, 1000);

    // Update field helper
    const updateField = (field: keyof CandidateProfile, value: any) => {
        if (!profile) return;

        const updated = { ...profile, [field]: value };
        setProfile(updated);
        saveProfile({ [field]: value });
    };

    // Update rich bio helper
    const updateBioRich = (bio_rich: string) => {
        if (!profile) return;

        const updated = {
            ...profile,
            marketplace_profile: {
                ...profile.marketplace_profile,
                bio_rich,
            },
        };
        setProfile(updated);
        saveProfile({
            marketplace_profile: {
                ...profile.marketplace_profile,
                bio_rich,
            },
        });
    };

    if (loading) {
        return (
            <div className="flex items-center justify-center min-h-screen">
                <span className="loading loading-spinner loading-lg"></span>
            </div>
        );
    }

    if (error || !profile) {
        return (
            <div className="p-8">
                <div className="alert alert-error">
                    <i className="fa-duotone fa-regular fa-circle-exclamation"></i>
                    <span>{error || 'Profile not found'}</span>
                </div>
            </div>
        );
    }

    return (
        <div className="p-8 max-w-6xl mx-auto">
            {/* Page Header */}
            <div className="flex items-center justify-between mb-8">
                <div>
                    <h1 className="text-3xl font-bold">Your Profile</h1>
                    <p className="text-base-content/70 mt-2">
                        Manage your professional profile and visibility settings
                    </p>
                </div>
                {saving && (
                    <div className="flex items-center gap-2 text-sm text-base-content/70">
                        <span className="loading loading-spinner loading-sm"></span>
                        Saving...
                    </div>
                )}
            </div>

            {/* Profile Completeness Indicator */}
            {completeness && (
                <div className="mb-8">
                    <ProfileCompletenessIndicator
                        completeness={completeness}
                        tierConfig={TIER_CONFIG[completeness.tier]}
                    />
                </div>
            )}

            {/* Tabs */}
            <div role="tablist" className="tabs tabs-box mb-6">
                <button
                    role="tab"
                    className={`tab ${activeTab === 'basic' ? 'tab-active' : ''}`}
                    onClick={() => setActiveTab('basic')}
                >
                    <i className="fa-duotone fa-regular fa-user mr-2"></i>
                    Basic Info
                </button>
                <button
                    role="tab"
                    className={`tab ${activeTab === 'professional' ? 'tab-active' : ''}`}
                    onClick={() => setActiveTab('professional')}
                >
                    <i className="fa-duotone fa-regular fa-briefcase mr-2"></i>
                    Professional Profile
                </button>
                <button
                    role="tab"
                    className={`tab ${activeTab === 'preferences' ? 'tab-active' : ''}`}
                    onClick={() => setActiveTab('preferences')}
                >
                    <i className="fa-duotone fa-regular fa-sliders mr-2"></i>
                    Career Preferences
                </button>
                <button
                    role="tab"
                    className={`tab ${activeTab === 'privacy' ? 'tab-active' : ''}`}
                    onClick={() => setActiveTab('privacy')}
                >
                    <i className="fa-duotone fa-regular fa-shield-check mr-2"></i>
                    Privacy & Visibility
                </button>
            </div>

            {/* Tab Content */}
            <div className="space-y-6">
                {/* Basic Info Tab */}
                {activeTab === 'basic' && (
                    <>
                        <div className="card bg-base-200 shadow">
                            <div className="card-body">
                                <h2 className="card-title">Contact Information</h2>
                                <div className="grid grid-cols-1 md:grid-cols-2 gap-4 mt-4">
                                    <fieldset className="fieldset">
                                        <legend className="fieldset-legend">Full Name</legend>
                                        <input
                                            type="text"
                                            className="input w-full"
                                            value={profile.full_name}
                                            onChange={(e) => updateField('full_name', e.target.value)}
                                            placeholder="John Doe"
                                        />
                                    </fieldset>

                                    <fieldset className="fieldset">
                                        <legend className="fieldset-legend">Email</legend>
                                        <input
                                            type="email"
                                            className="input w-full"
                                            value={profile.email}
                                            disabled
                                        />
                                        <p className="fieldset-label">
                                            Email cannot be changed
                                        </p>
                                    </fieldset>

                                    <fieldset className="fieldset">
                                        <legend className="fieldset-legend">Phone</legend>
                                        <input
                                            type="tel"
                                            className="input w-full"
                                            value={profile.phone || ''}
                                            onChange={(e) => updateField('phone', e.target.value)}
                                            placeholder="+1 (555) 123-4567"
                                        />
                                    </fieldset>

                                    <fieldset className="fieldset">
                                        <legend className="fieldset-legend">Location</legend>
                                        <input
                                            type="text"
                                            className="input w-full"
                                            value={profile.location || ''}
                                            onChange={(e) => updateField('location', e.target.value)}
                                            placeholder="San Francisco, CA"
                                        />
                                    </fieldset>
                                </div>
                            </div>
                        </div>

                        <div className="card bg-base-200 shadow">
                            <div className="card-body">
                                <h2 className="card-title">Current Position</h2>
                                <div className="grid grid-cols-1 md:grid-cols-2 gap-4 mt-4">
                                    <fieldset className="fieldset">
                                        <legend className="fieldset-legend">Current Title</legend>
                                        <input
                                            type="text"
                                            className="input w-full"
                                            value={profile.current_title || ''}
                                            onChange={(e) => updateField('current_title', e.target.value)}
                                            placeholder="Senior Software Engineer"
                                        />
                                    </fieldset>

                                    <fieldset className="fieldset">
                                        <legend className="fieldset-legend">Current Company</legend>
                                        <input
                                            type="text"
                                            className="input w-full"
                                            value={profile.current_company || ''}
                                            onChange={(e) => updateField('current_company', e.target.value)}
                                            placeholder="Acme Corp"
                                        />
                                    </fieldset>
                                </div>
                            </div>
                        </div>
                    </>
                )}

                {/* Professional Profile Tab */}
                {activeTab === 'professional' && (
                    <>
                        <div className="card bg-base-200 shadow">
                            <div className="card-body">
                                <h2 className="card-title">Professional Bio</h2>
                                <p className="text-sm text-base-content/70 mb-4">
                                    A brief summary that recruiters will see on your profile card
                                </p>

                                <fieldset className="fieldset">
                                    <legend className="fieldset-legend">
                                        Profile Summary (Card Preview)
                                        <span className="text-base-content/60 font-normal text-sm ml-2">
                                            ({(profile.bio || '').length}/500 characters)
                                        </span>
                                    </legend>
                                    <textarea
                                        className="textarea w-full h-24"
                                        placeholder="Brief overview of your background, skills, and career goals"
                                        maxLength={500}
                                        value={profile.bio || ''}
                                        onChange={(e) => updateField('bio', e.target.value)}
                                    />
                                    <p className="fieldset-label">
                                        Short bio displayed on your profile card
                                    </p>
                                </fieldset>
                            </div>
                        </div>

                        <div className="card bg-base-200 shadow">
                            <div className="card-body">
                                <div className="flex items-center justify-between mb-2">
                                    <h2 className="card-title">Detailed Bio</h2>
                                    <span className="badge badge-primary badge-sm gap-1">
                                        <i className="fa-duotone fa-regular fa-sparkles"></i>
                                        Boost Profile +12%
                                    </span>
                                </div>
                                <p className="text-sm text-base-content/70 mb-4">
                                    Share your story, achievements, and what makes you unique. Supports Markdown formatting.
                                </p>

                                <fieldset className="fieldset">
                                    <legend className="fieldset-legend">
                                        Your Story
                                        <span className="text-base-content/60 font-normal text-sm ml-2">
                                            ({(profile.marketplace_profile?.bio_rich || '').length} characters)
                                        </span>
                                    </legend>
                                    <textarea
                                        className="textarea w-full h-48 font-mono text-sm"
                                        placeholder={`Tell recruiters about yourself...\n\nExample:\n- **7+ years** in full-stack development\n- Specialized in React and Node.js ecosystems\n- Built and scaled products from 0 to 1M users\n- Passionate about developer tools and infrastructure\n\nUse **bold**, *italic*, and bullet points to make it engaging!`}
                                        value={profile.marketplace_profile?.bio_rich || ''}
                                        onChange={(e) => updateBioRich(e.target.value)}
                                    />
                                    <p className="fieldset-label">
                                        <i className="fa-duotone fa-regular fa-lightbulb"></i>
                                        Tip: Use Markdown for formatting (**, *, bullets). This will appear prominently on your full profile.
                                    </p>
                                </fieldset>

                                {/* Preview */}
                                {profile.marketplace_profile?.bio_rich && profile.marketplace_profile.bio_rich.length > 0 && (
                                    <div className="mt-4">
                                        <div className="text-sm font-semibold mb-2">Preview:</div>
                                        <div className="card bg-base-300 p-4">
                                            <div className="prose prose-sm max-w-none">
                                                {profile.marketplace_profile.bio_rich.split('\n').map((line, idx) => {
                                                    // Bold
                                                    line = line.replace(/\*\*(.+?)\*\*/g, '<strong>$1</strong>');
                                                    // Italic
                                                    line = line.replace(/\*(.+?)\*/g, '<em>$1</em>');
                                                    // Bullet points
                                                    if (line.trim().startsWith('- ')) {
                                                        return <li key={idx} dangerouslySetInnerHTML={{ __html: line.replace(/^- /, '') }} />;
                                                    }
                                                    // Paragraphs
                                                    return line.trim() ? <p key={idx} dangerouslySetInnerHTML={{ __html: line }} /> : <br key={idx} />;
                                                })}
                                            </div>
                                        </div>
                                    </div>
                                )}
                            </div>
                        </div>

                        <div className="card bg-base-200 shadow">
                            <div className="card-body">
                                <h2 className="card-title">Online Profiles</h2>
                                <div className="grid grid-cols-1 gap-4 mt-4">
                                    <fieldset className="fieldset">
                                        <legend className="fieldset-legend">
                                            <i className="fa-brands fa-linkedin mr-2"></i>
                                            LinkedIn
                                        </legend>
                                        <input
                                            type="url"
                                            className="input w-full"
                                            value={profile.linkedin_url || ''}
                                            onChange={(e) => updateField('linkedin_url', e.target.value)}
                                            placeholder="https://linkedin.com/in/yourprofile"
                                        />
                                    </fieldset>

                                    <fieldset className="fieldset">
                                        <legend className="fieldset-legend">
                                            <i className="fa-brands fa-github mr-2"></i>
                                            GitHub
                                        </legend>
                                        <input
                                            type="url"
                                            className="input w-full"
                                            value={profile.github_url || ''}
                                            onChange={(e) => updateField('github_url', e.target.value)}
                                            placeholder="https://github.com/yourusername"
                                        />
                                    </fieldset>

                                    <fieldset className="fieldset">
                                        <legend className="fieldset-legend">
                                            <i className="fa-duotone fa-regular fa-link mr-2"></i>
                                            Portfolio Website
                                        </legend>
                                        <input
                                            type="url"
                                            className="input w-full"
                                            value={profile.portfolio_url || ''}
                                            onChange={(e) => updateField('portfolio_url', e.target.value)}
                                            placeholder="https://yourportfolio.com"
                                        />
                                    </fieldset>
                                </div>
                            </div>
                        </div>

                        <div className="card bg-base-200 shadow">
                            <div className="card-body">
                                <h2 className="card-title">Skills & Expertise</h2>
                                <fieldset className="fieldset mt-4">
                                    <legend className="fieldset-legend">Skills</legend>
                                    <textarea
                                        className="textarea w-full h-24"
                                        value={profile.skills || ''}
                                        onChange={(e) => updateField('skills', e.target.value)}
                                        placeholder="React, Node.js, TypeScript, AWS, Docker, PostgreSQL..."
                                    />
                                    <p className="fieldset-label">
                                        Comma-separated list of your technical and professional skills
                                    </p>
                                </fieldset>
                            </div>
                        </div>
                    </>
                )}

                {/* Career Preferences Tab */}
                {activeTab === 'preferences' && (
                    <>
                        <div className="card bg-base-200 shadow">
                            <div className="card-body">
                                <h2 className="card-title">Salary Expectations</h2>
                                <div className="grid grid-cols-1 md:grid-cols-2 gap-4 mt-4">
                                    <fieldset className="fieldset">
                                        <legend className="fieldset-legend">Minimum Salary (USD)</legend>
                                        <input
                                            type="number"
                                            className="input w-full"
                                            value={profile.desired_salary_min || ''}
                                            onChange={(e) => updateField('desired_salary_min', parseInt(e.target.value) || null)}
                                            placeholder="80000"
                                            min="0"
                                            step="5000"
                                        />
                                    </fieldset>

                                    <fieldset className="fieldset">
                                        <legend className="fieldset-legend">Maximum Salary (USD)</legend>
                                        <input
                                            type="number"
                                            className="input w-full"
                                            value={profile.desired_salary_max || ''}
                                            onChange={(e) => updateField('desired_salary_max', parseInt(e.target.value) || null)}
                                            placeholder="120000"
                                            min="0"
                                            step="5000"
                                        />
                                    </fieldset>
                                </div>
                            </div>
                        </div>

                        <div className="card bg-base-200 shadow">
                            <div className="card-body">
                                <h2 className="card-title">Job Preferences</h2>
                                <div className="space-y-4 mt-4">
                                    <fieldset className="fieldset">
                                        <legend className="fieldset-legend">Desired Job Type</legend>
                                        <select
                                            className="select w-full"
                                            value={profile.desired_job_type || ''}
                                            onChange={(e) => updateField('desired_job_type', e.target.value)}
                                        >
                                            <option value="">Select job type...</option>
                                            {JOB_TYPE_OPTIONS.map(type => (
                                                <option key={type} value={type}>{type}</option>
                                            ))}
                                        </select>
                                    </fieldset>

                                    <fieldset className="fieldset">
                                        <legend className="fieldset-legend">Availability</legend>
                                        <select
                                            className="select w-full"
                                            value={profile.availability || ''}
                                            onChange={(e) => updateField('availability', e.target.value)}
                                        >
                                            <option value="">Select availability...</option>
                                            {AVAILABILITY_OPTIONS.map(avail => (
                                                <option key={avail} value={avail}>{avail}</option>
                                            ))}
                                        </select>
                                    </fieldset>

                                    <div className="flex items-center gap-4">
                                        <label className="flex items-center gap-2 cursor-pointer">
                                            <input
                                                type="checkbox"
                                                className="checkbox"
                                                checked={profile.open_to_remote || false}
                                                onChange={(e) => updateField('open_to_remote', e.target.checked)}
                                            />
                                            <span>Open to remote work</span>
                                        </label>

                                        <label className="flex items-center gap-2 cursor-pointer">
                                            <input
                                                type="checkbox"
                                                className="checkbox"
                                                checked={profile.open_to_relocation || false}
                                                onChange={(e) => updateField('open_to_relocation', e.target.checked)}
                                            />
                                            <span>Open to relocation</span>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </>
                )}

                {/* Privacy & Visibility Tab */}
                {activeTab === 'privacy' && (
                    <>
                        <div className="card bg-base-200 shadow">
                            <div className="card-body">
                                <h2 className="card-title">Profile Visibility</h2>
                                <p className="text-sm text-base-content/70 mb-4">
                                    Control who can see your profile on the marketplace
                                </p>

                                <fieldset className="fieldset">
                                    <legend className="fieldset-legend">Visibility Level</legend>
                                    <select
                                        className="select w-full"
                                        value={profile.marketplace_visibility || 'public'}
                                        onChange={(e) => updateField('marketplace_visibility', e.target.value)}
                                    >
                                        <option value="public">Public - All recruiters can see your profile</option>
                                        <option value="private">Private - Only connected recruiters</option>
                                        <option value="hidden">Hidden - Profile not visible to anyone</option>
                                    </select>
                                </fieldset>
                            </div>
                        </div>

                        <div className="card bg-base-200 shadow">
                            <div className="card-body">
                                <h2 className="card-title">Information Visibility</h2>
                                <p className="text-sm text-base-content/70 mb-4">
                                    Choose what information recruiters can see on your profile
                                </p>

                                <div className="space-y-3">
                                    <label className="flex items-center justify-between p-3 bg-base-300 rounded-lg cursor-pointer hover:bg-base-300/70">
                                        <div>
                                            <div className="font-medium">Email Address</div>
                                            <div className="text-sm text-base-content/60">Allow recruiters to see your email</div>
                                        </div>
                                        <input
                                            type="checkbox"
                                            className="toggle toggle-primary"
                                            checked={profile.show_email || false}
                                            onChange={(e) => updateField('show_email', e.target.checked)}
                                        />
                                    </label>

                                    <label className="flex items-center justify-between p-3 bg-base-300 rounded-lg cursor-pointer hover:bg-base-300/70">
                                        <div>
                                            <div className="font-medium">Phone Number</div>
                                            <div className="text-sm text-base-content/60">Allow recruiters to see your phone</div>
                                        </div>
                                        <input
                                            type="checkbox"
                                            className="toggle toggle-primary"
                                            checked={profile.show_phone || false}
                                            onChange={(e) => updateField('show_phone', e.target.checked)}
                                        />
                                    </label>

                                    <label className="flex items-center justify-between p-3 bg-base-300 rounded-lg cursor-pointer hover:bg-base-300/70">
                                        <div>
                                            <div className="font-medium">Location</div>
                                            <div className="text-sm text-base-content/60">Allow recruiters to see your location</div>
                                        </div>
                                        <input
                                            type="checkbox"
                                            className="toggle toggle-primary"
                                            checked={profile.show_location ?? true}
                                            onChange={(e) => updateField('show_location', e.target.checked)}
                                        />
                                    </label>

                                    <label className="flex items-center justify-between p-3 bg-base-300 rounded-lg cursor-pointer hover:bg-base-300/70">
                                        <div>
                                            <div className="font-medium">Current Company</div>
                                            <div className="text-sm text-base-content/60">Allow recruiters to see your employer</div>
                                        </div>
                                        <input
                                            type="checkbox"
                                            className="toggle toggle-primary"
                                            checked={profile.show_current_company ?? true}
                                            onChange={(e) => updateField('show_current_company', e.target.checked)}
                                        />
                                    </label>

                                    <label className="flex items-center justify-between p-3 bg-base-300 rounded-lg cursor-pointer hover:bg-base-300/70">
                                        <div>
                                            <div className="font-medium">Salary Expectations</div>
                                            <div className="text-sm text-base-content/60">Allow recruiters to see your desired salary</div>
                                        </div>
                                        <input
                                            type="checkbox"
                                            className="toggle toggle-primary"
                                            checked={profile.show_salary_expectations || false}
                                            onChange={(e) => updateField('show_salary_expectations', e.target.checked)}
                                        />
                                    </label>
                                </div>
                            </div>
                        </div>
                    </>
                )}
            </div>
        </div>
    );
}
