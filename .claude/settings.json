{
  "permissions": {
    "defaultMode": "acceptEdits",
    "allow": [
      "Edit(/apps/corporate/src/app/landing/**/*)",
      "Edit(/apps/corporate/src/app/articles/**/*)",
      "Edit(/apps/corporate/src/app/lists/**/*)",
      "Edit(/apps/corporate/src/app/modals/**/*)",
      "Edit(/apps/corporate/src/app/dashboards/**/*)",
      "Edit(/apps/corporate/src/app/messages/**/*)",
      "Edit(/apps/corporate/src/app/headers/**/*)",
      "Edit(/apps/corporate/src/app/footers/**/*)",
      "Edit(/apps/corporate/src/app/forms/**/*)",
      "Edit(/apps/corporate/src/app/details/**/*)",
      "Edit(/apps/corporate/src/app/cards/**/*)",
      "Edit(/apps/corporate/src/app/search/**/*)",
      "Edit(/apps/corporate/src/app/empty/**/*)",
      "Write(/apps/corporate/src/app/articles/**/*)",
      "Write(/apps/corporate/src/app/lists/**/*)",
      "Write(/apps/corporate/src/app/modals/**/*)",
      "Write(/apps/corporate/src/app/dashboards/**/*)",
      "Write(/apps/corporate/src/app/messages/**/*)",
      "Write(/apps/corporate/src/app/headers/**/*)",
      "Write(/apps/corporate/src/app/footers/**/*)",
      "Write(/apps/corporate/src/app/forms/**/*)",
      "Write(/apps/corporate/src/app/details/**/*)",
      "Write(/apps/corporate/src/app/cards/**/*)",
      "Write(/apps/corporate/src/app/search/**/*)",
      "Write(/apps/corporate/src/app/empty/**/*)",
      "Write(/apps/corporate/src/themes/**/*)",
      "Write(/.claude/agents/**/*)",
      "Write(/.claude/skills/**/*)",
      "Write(/.claude/docs/**/*)",
      "Bash(ls -la apps/corporate/src/app/landing/*)",
      "Bash(find apps/corporate/src/app/landing -name \"*.tsx\")",
      "Bash(npx tsc:*)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/gsd-check-update.js"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "node .claude/hooks/gsd-statusline.js"
  }
}
